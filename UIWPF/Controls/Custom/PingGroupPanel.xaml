<UserControl x:Class="UIWPF.Controls.Custom.PingGroupPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIWPF.Controls.Custom"
             mc:Ignorable="d"
             x:Name="PingGroupPanel1"
             d:DesignHeight="450" d:DesignWidth="800">
   
        <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Border BorderThickness="0" Height="30" Margin="5" BorderBrush="{StaticResource Second.Foreground}" DockPanel.Dock="Top">
            <Button Style="{StaticResource SecondButton}"  Content="Add group" Grid.ColumnSpan="2" Click="AddGroup_Click" />
        </Border>
           
            <ScrollViewer DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="GroupGrid" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
            </Grid>
            </ScrollViewer>
        </DockPanel>
    
        
        
</UserControl>
