<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackGroundOpacity" Opacity="0.9" Color="{StaticResource MainBlack}"/>

    <SolidColorBrush x:Key="BackGroundNoOpacity" Opacity="1" Color="{StaticResource MainBlack}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderFont}"/>

    <SolidColorBrush x:Key="WindowToolBarBrush" Color="{StaticResource BorderFont}"/>

</ResourceDictionary>